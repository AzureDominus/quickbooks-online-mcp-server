# QuickBooks MCP Server env template
# Copy this file to .env and fill in your values

# Required (OAuth app)
QUICKBOOKS_CLIENT_ID=
QUICKBOOKS_CLIENT_SECRET=

# Optional
# sandbox or production
QUICKBOOKS_ENVIRONMENT=sandbox

# OAuth callback listener port (defaults to 8765 in code)
QUICKBOOKS_OAUTH_PORT=8765

# If you already have these you can skip the interactive OAuth flow
QUICKBOOKS_REFRESH_TOKEN=
QUICKBOOKS_REALM_ID=

# Where to store tokens on disk
# QUICKBOOKS_TOKEN_PATH=~/.config/quickbooks-mcp/tokens.json

# Logging
LOG_LEVEL=INFO
# NODE_ENV=production

# Idempotency storage
# IDEMPOTENCY_STORAGE_PATH=~/.cache/quickbooks-mcp/idempotency
# IDEMPOTENCY_TTL_MS=86400000
# IDEMPOTENCY_CLEANUP_MS=3600000
